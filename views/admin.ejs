              <h3><b>All</b> Cars</h3>
              <button class="nice-button" style="margin-bottom: 10px">
                Create new car
                <a style="color: inherit; text-decoration: none" href="/admin/car?mode=create"></a>
              </button>
              <ul class="list">
                <% for (const car of cars) { %>
                <li>
                  <img
                    src="<%= car.photo %>"
                    onerror="this.src='https://fakeimg.pl/300/?text=fake+car'"
                    alt="car photo"
                  /><a> <%= car.name %> </a><br />
                  <a>Color: </a>
                  <%= car.color %>
                  <br />
                  <a>Type: </a>
                  <%= car.type %>
                  <br />
                  <a>Description: </a>
                  <%= car.description %>
                  <br />
                  <button class="nice-button" style="margin-right: 10px">
                    Edit<a
                      style="color: inherit; text-decoration: none"
                      href="/admin/car?id=<%= car.id %>&mode=edit"
                    ></a>
                  </button>
                  <button class="nice-button">
                    Delete
                    <a style="color: inherit; text-decoration: none" href="/api/car/delete/<%= car.id %>"></a>
